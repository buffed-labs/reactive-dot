{
  "name": "@reactive-dot/core",
  "version": "0.68.2",
  "description": "VanillaJS library for ReactiveDOT",
  "keywords": [
    "substrate",
    "polkadot"
  ],
  "homepage": "https://reactivedot.dev/",
  "bugs": {
    "url": "https://github.com/buffed-labs/reactive-dot/issues",
    "email": "tien.nguyenkhac@icloud.com"
  },
  "license": "LGPL-3.0-or-later",
  "author": "Tiến Nguyễn Khắc <tien.nguyenkhac@icloud.com> (https://tien.zone/)",
  "repository": {
    "type": "git",
    "url": "https://github.com/buffed-labs/reactive-dot.git",
    "directory": "packages/core"
  },
  "type": "module",
  "files": [
    "src",
    "build",
    ".papi/descriptors/dist/*"
  ],
  "exports": {
    ".": "./build/index.js",
    "./providers/light-client.js": "./build/providers/light-client/index.js",
    "./wallets.js": "./build/wallets/index.js",
    "./internal.js": "./build/internal.js",
    "./internal/actions.js": "./build/actions/index.js",
    "./internal/maths.js": "./build/maths/index.js"
  },
  "scripts": {
    "dev": "tsc --build --watch",
    "build": "rm -f .papi/descriptors/generated.json && papi generate && mv .papi/descriptors/dist/index.mjs .papi/descriptors/dist/index.js && tsc --build --clean && tsc --build",
    "lint": "eslint src",
    "test": "vitest"
  },
  "dependencies": {
    "@noble/hashes": "^2.0.1",
    "@reactive-dot/utils": "workspace:^",
    "@substrate/smoldot-discovery": "^2.0.2",
    "ox": "^0.12.0"
  },
  "devDependencies": {
    "@reactive-dot/eslint-config": "workspace:^",
    "@tsconfig/recommended": "^1.0.13",
    "@tsconfig/strictest": "^2.0.8",
    "abitype": "^1.2.3",
    "eslint": "^9.39.2",
    "polkadot-api": "^1.23.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "polkadot-api": ">=1.23.2"
  }
}
